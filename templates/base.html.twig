<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            {# para meter estilos #}
            <link href="{{asset('assets/css/style.css')}}" type="text/css" rel="stylesheet" />
            <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        {% endblock %}

       
    </head>
    <body>
            {% block header %}
       

       <nav class="navbar navbar-expand-lg navbar-light bg-dark">
  <a class="navbar-brand text-white" href="#">Tareas Symfony</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto" style="width: 100%; display: flex; justify-content: end;">
     
      {% if app.user %}
       <li class="nav-item active">
        <a class="nav-link text-warning" href="/tareas">Inicio<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item  active">
        <a class="nav-link text-warning mr-3" href="{{path('my_tasks')}}">Mis Tareas</a>
      </li>
        <li class="nav-item  active">
        <a class="nav-link text-warning mr-3" href="{{path('task_creation')}}">Crear Tareas</a>
      </li>
       <li class="nav-item  active">
          <a class="nav-link text-white" href="">{{app.user.name}}</a>
        </li>
        <li class="nav-item  active">
          <a class="nav-link text-white" href="{{path('logout')}}">Cerrar Sesi√≥n</a>
        </li>
      {% else %}
      <li class="nav-item  active">
        <a class="nav-link text-warning" href="{{path('login')}}">Login</a>
      </li>
       <li class="nav-item  active">
        <a class="nav-link text-warning" href="{{path('register')}}">Registro</a>
      </li>

     {% endif %}
    
    </ul>
   
  </div>
</nav>     
            {% endblock %}
            {% block body %}{% endblock %}
            {% block javascripts %}
                {#{{ encore_entry_script_tags('app') }}#}
                <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            {% endblock %}
    </body>
</html>
